<?xml version="1.0" encoding="ISO-8859-1"?>
<PropertyList include="c140-base.xml">
	<sim>
		<description>Cessna 140</description>
		<author>Benedikt Wolf (D-ECHO)</author>
		<aircraft-version>01/2021</aircraft-version>
		<status>alpha</status>
		<flight-model archive="y">jsb</flight-model>
		<aero archive="y">c140</aero>
		<previews>
            <preview>
                <type>cockpit</type>
                <path>Previews/preview1.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/preview2.jpg</path>
                <splash type="bool">true</splash>
            </preview>
        </previews>
		<rating>
			<FDM type="int">0</FDM>
			<systems type="int">0</systems>
			<cockpit type="int">0</cockpit>
			<model type="int">0</model>
		</rating>
		<fuel-fraction>0.5</fuel-fraction>
	</sim>
	<limits>
		<!--	Ref.1, p.7	-->
		<max-positive-g>4.57</max-positive-g>
		<max-negative-g>-2.26</max-negative-g>
		
		<!--	Ref.1, p.8	-->
		<vne>121.66</vne>	<!-- 140 mph -->
		<max-flap-extension-speed>
			<flaps>0.01</flaps> <!-- applicable for any flap extension -->
			<speed>71.26</speed> <!-- 82 mph -->
		</max-flap-extension-speed>
		
