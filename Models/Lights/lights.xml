<?xml version="1.0"?>
<PropertyList>
	<path>lights.ac</path>
	
	<params>
		<light-used></light-used>
		<show-prop>controls/lighting/landing-lights</show-prop>
	</params>
	
	<animation>
		<condition>
			<equals>
				<value alias="../../../../params/light-used"/>
				<value>red</value>
			</equals>
		</condition>
		<type>select</type>
		<object-name>Red</object-name>
	</animation>
	<animation>
		<condition>
			<equals>
				<value alias="../../../../params/light-used"/>
				<value>green</value>
			</equals>
		</condition>
		<type>select</type>
		<object-name>Green</object-name>
	</animation>
	<animation>
		<condition>
			<equals>
				<value alias="../../../../params/light-used"/>
				<value>white</value>
			</equals>
		</condition>
		<type>select</type>
		<object-name>White</object-name>
	</animation>
	<animation>
		<condition>
			<equals>
				<value alias="../../../../params/light-used"/>
				<value>blue</value>
			</equals>
		</condition>
		<type>select</type>
		<object-name>Blue</object-name>
	</animation>
	<animation>
		<condition>
			<equals>
				<value alias="../../../../params/light-used"/>
				<value>landing</value>
			</equals>
		</condition>
		<type>select</type>
		<object-name>Landing</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Red</object-name>
		<object-name>Green</object-name>
		<object-name>White</object-name>
		<object-name>Blue</object-name>
		<object-name>Landing</object-name>
	</effect>

	<animation>
		<type>noshadow</type>
		<object-name>Red</object-name>
		<object-name>Green</object-name>
		<object-name>White</object-name>
		<object-name>Blue</object-name>
		<object-name>Landing</object-name>
	</animation>

	<animation>
		<type>alpha-test</type>
		<alpha-factor>0.01</alpha-factor>
	</animation>

	<animation>
		<type>billboard</type>
		<object-name>Red</object-name>
		<object-name>Green</object-name>
		<object-name>Blue</object-name>
		<object-name>White</object-name>
		<spherical type="bool">true</spherical>
	</animation>

	<animation>
		<type>dist-scale</type>
		<object-name>Red</object-name>
		<object-name>Green</object-name>
		<object-name>White</object-name>
		<object-name>Blue</object-name>
		<object-name>Landing</object-name>
		<interpolation>
			<entry><ind>0</ind><dep>0.5</dep></entry>
			<entry><ind>20</ind><dep>1</dep></entry>
			<entry><ind>1500</ind><dep>5</dep></entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>scale</type>
		<object-name>Landing</object-name>
		<x-offset>1.5</x-offset>
		<y-offset>1.5</y-offset>
		<z-offset>1.5</z-offset>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Red</object-name>
		<object-name>Green</object-name>
		<object-name>White</object-name>
		<object-name>Blue</object-name>
		<object-name>Landing</object-name>
		<condition>
			<and>
				<not>
					<property>/sim/rendering/shaders/skydome</property>
				</not>
				<property alias="../../../../params/show-prop"/>
			</and>
		</condition>
	</animation>
</PropertyList>
