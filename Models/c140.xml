			<y-m>-0.434404</y-m>
			<z-m>0.185</z-m>
		</offsets>
	</model>
	
	<!-- Animations -->
	<!-- Yoke -->
	<animation>
		<type>rotate</type>
		<object-name>yoke.L</object-name>
		<property>/controls/flight/aileron</property>
		<factor>-30</factor>
		<axis>
			<x>1</x>
		</axis>
		<center>
			<y-m>-0.257299</y-m>
			<z-m>0.124333</z-m>
		</center>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>yoke.L</object-name>
		<property>/controls/flight/elevator</property>
		<factor>-0.15</factor>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	<!-- Flight Control Surfaces -->
	<!-- Ailerons -->
	<animation>
		<type>rotate</type>
		<object-name>aileronL</object-name>
		<property>surface-positions/left-aileron-pos-norm</property>
		<factor>-24</factor>
		<axis>
			<x1-m>-0.691601</x1-m>
			<y1-m>-2.61523</y1-m>
			<z1-m>0.644366</z1-m>
			<x2-m>-0.688097</x2-m>
			<y2-m>-4.53279</y2-m>
			<z2-m>0.678244</z2-m>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>aileronR</object-name>
		<property>surface-positions/right-aileron-pos-norm</property>
		<factor>-24</factor>
		<axis>
			<x1-m>-0.691601</x1-m>
			<y1-m>-2.61523</y1-m>
			<z1-m>0.644366</z1-m>
			<x2-m>-0.688097</x2-m>
			<y2-m>-4.53279</y2-m>
			<z2-m>0.678244</z2-m>
		</axis>
	</animation>
	
</PropertyList>
