<?xml version="1.0"?>

<PropertyList>
	<path>c140.ac</path>
	
	<!-- Effects -->
	<effect>
		<inherits-from>Effects/glass</inherits-from>
		<object-name>glass</object-name>
	</effect>
	
	<!-- Include Lights -->
	<!-- The Cessna 140 is equipped with the following:
		*Navigation lights (Wings+Rudder)
		*Landing lights (optional!)
	-->
	<model>
		<path>Lights/tail-navlight.xml</path>
		<offsets>
			<x-m>3.381</x-m>
			<z-m>0.729</z-m>
		</offsets>
	</model>
	
	<!-- Instrument Panel -->
	<!-- Instruments -->
	<!-- 80mm -->
	<model>
		<path>Instruments/asi/asi.xml</path>
		<offsets>
			<x-m>-1.85344</x-m>
			<y-m>-0.223687</y-m>
			<z-m>0.219743</z-m>
		</offsets>
	</model>
	<model>
		<path>Instruments/alt/alt.xml</path>
