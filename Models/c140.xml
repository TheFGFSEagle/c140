	<!-- Levers -->
	<!-- Throttle -->
	<animation>
		<type>slider</type>
		<drag-direction>vertical</drag-direction>
		<object-name>throttle.lever</object-name>
		<property>controls/engines/engine[0]/throttle</property>
		<factor>-0.0579</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/engines/engine[0]/throttle</property>
				<min>0.0</min>
				<max>1.0</max>
				<factor>0.05</factor>
			</binding>
		</action>
	</animation>
	<!-- Other Levers - left to right -->
	<animation>
		<type>slider</type>
		<drag-direction>vertical</drag-direction>
		<object-name>mixture.lever</object-name>
		<property>controls/engines/engine[0]/mixture</property>
		<factor>-0.04</factor>
		<offset-m>0.04</offset-m>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/engines/engine[0]/mixture</property>
				<min>0.0</min>
				<max>1.0</max>
				<factor>0.05</factor>
			</binding>
		</action>
	</animation>
	<!-- based on c172p -->
	<animation>
		<type>pick</type>
		<object-name>primer.lever</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>c140.pumpPrimer();</script>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>primer</tooltip-id>
				<label>Engine primer (%1d)</label>
				<property>controls/engines/engine/primer</property>
			</binding>
		</hovered>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>primer.lever</object-name>
		<property>/controls/engines/engine/primer-animation</property>
		<factor>0.04</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>slider</type>
		<drag-direction>vertical</drag-direction>
		<object-name>carbheat.lever</object-name>
		<property>controls/engines/engine[0]/carburetor-heat</property>
		<factor>0.04</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/engines/engine[0]/carburetor-heat</property>
				<min>0.0</min>
				<max>1.0</max>
				<factor>-0.05</factor>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>parkbrake.lever</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-cycle</command>
				<property>controls/gear/brake-parking</property>
				<value>1.0</value>
				<value>0.0</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>parkbrake.lever</object-name>
		<property>controls/gear/brake-parking</property>
		<factor>0.04</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>slider</type>
		<drag-direction>vertical</drag-direction>
		<object-name>cabinheat.lever</object-name>
		<property>controls/cabin/cabin-heat-lever</property>
		<factor>0.04</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/cabin/cabin-heat-lever</property>
				<min>0.0</min>
				<max>1.0</max>
				<factor>-0.05</factor>
			</binding>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<drag-direction>vertical</drag-direction>
		<object-name>starter.lever</object-name>
		<property>controls/switches/starter</property>
		<factor>0.04</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>starter.lever</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-assign</command>
				<property>controls/switches/starter</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/switches/starter</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	
