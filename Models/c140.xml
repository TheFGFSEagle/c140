	<!-- ### ANIMATIONS ### -->
	<!-- Instrument Panel -->
	<!-- Switches -->
	<animation>
		<type>knob</type>
		<object-name>master.switch</object-name>
		<property>controls/switches/master</property>
		<factor>10</factor>
		<center>
			<x-m>-1.85378</x-m>
			<z-m>0.020205</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-toggle</command>
				<property>controls/switches/master</property>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>c140/sound/click</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>tb.switch</object-name>
		<property>controls/switches/turn-coordinator</property>
		<factor>10</factor>
		<center>
			<x-m>-1.85378</x-m>
			<z-m>0.020205</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-toggle</command>
