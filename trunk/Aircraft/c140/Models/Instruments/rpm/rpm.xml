<?xml version="1.0"?>

<PropertyList>

 <path>rpm.ac</path>

    <params>
        <engine>
            <rpm>engines/engine[0]/rpm</rpm>
        </engine>
    </params>

    <effect>
        <inherits-from>Aircraft/c150/Models/Effects/interior/flashlight</inherits-from>
        <object-name>Face</object-name>
        <object-name>PointerTip</object-name>  
        <object-name>PointerCentre</object-name>
        <object-name>PointerTip</object-name>
        <object-name>Fmeter1</object-name>
        <object-name>Fmeter2</object-name>
        <object-name>Fmeter3</object-name>
        <object-name>Fmeter4</object-name>
        <object-name>Fmeter5</object-name>
        <object-name>Fmeter6</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>Face</object-name>
        <object-name>PointerTip</object-name>   
        <object-name>Fmeter1</object-name>
        <object-name>Fmeter2</object-name>
        <object-name>Fmeter3</object-name>
        <object-name>Fmeter4</object-name>
        <object-name>Fmeter5</object-name>
        <object-name>Fmeter6</object-name>
        <emission>
            <red>1.0</red>
            <green>0.2</green>
            <blue>0.0</blue>
            <factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
        </emission>
    </animation>


 <animation> 
  <type>rotate</type>
  <object-name>PointerCentre</object-name>
  <object-name>PointerTip</object-name>
  <property alias="/params/engine/rpm"/>
  <interpolation>
   <entry><ind>0</ind><dep>0</dep></entry>
   <entry><ind>500</ind><dep>36</dep></entry>
   <entry><ind>1000</ind><dep>73</dep></entry>
   <entry><ind>1500</ind><dep>111</dep></entry>
   <entry><ind>2000</ind><dep>149</dep></entry>
   <entry><ind>2500</ind><dep>187</dep></entry>
   <entry><ind>3000</ind><dep>226</dep></entry>
   <entry><ind>3500</ind><dep>264</dep></entry>
  </interpolation>
  <axis> 
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>  
  </center>
 </animation>         
 
   <!-- tach Meter-->
  <animation>
    <type>textranslate</type>
    <object-name>Fmeter1</object-name>
    <property>instrumentation/clock/tach-meter-hour</property>
    <factor>0.0001</factor>
    <step> 1000 </step>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Fmeter2</object-name>
    <property>instrumentation/clock/tach-meter-hour</property>
    <factor>0.001</factor>
    <step> 100 </step>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Fmeter3</object-name>
    <property>instrumentation/clock/tach-meter-hour</property>
    <factor>0.01</factor>
    <step> 10 </step>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Fmeter4</object-name>
    <property>instrumentation/clock/tach-meter-hour</property>
    <factor>0.1</factor>
    <step> 1 </step>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Fmeter5</object-name>
    <property>instrumentation/clock/tach-meter-hour</property>
    <factor>1.0</factor>
    <step>0.1</step>
    <!--bias> -0.05 </bias-->
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Fmeter6</object-name>
    <property>instrumentation/clock/tach-meter-hour</property>
    <factor>10.0</factor>
    <!--step>0.01</step-->
    <bias> -0.005 </bias>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
